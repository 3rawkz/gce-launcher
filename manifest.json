{
  "manifest_version": 2,

  "name": "GCE Launcher",
  "description": "This extension launches a GCE instance on demand with a persistent disk.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/*",
    "https://apis.google.com/*",
    "identity", "https://accounts.google.com/*",
    "https://www.googleapis.com/*",
    "cookies"
  ],
  "oauth2": {
    "client_id": "82527149933-0b4975omj32if91m551eqb3q8bmmdcbv.apps.googleusercontent.com",
    "scopes": [
      "profile",
      "email",
      "https://www.googleapis.com/auth/compute"
    ]
  }
}
